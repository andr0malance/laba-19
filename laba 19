package com.company;
import java.util.Arrays;
import java.util.Scanner;

public class Main {
    @FunctionalInterface
    interface SortAlgorithm {
        void sort(int[] array);
    }

    public static void sortArray(int[] masiv, SortAlgorithm sortAlgorithm) {
        sortAlgorithm.sort(masiv);
    }

    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        System.out.println ("Введите длину массива");
        int kolvo = scanner.nextInt();
        int[] masiv = new int[kolvo];
        System.out.println("Введите каждый элемент массива: ");
        for (int i = 0; i < kolvo; i++)
        {
            masiv[i] = scanner.nextInt();
        }

        sortArray(masiv, arr -> Arrays.sort(arr));
        System.out.println("Отсортированный массив по возрастанию: " + Arrays.toString(masiv));
        sortArray(masiv, arr ->
                {
                    Arrays.sort(arr);
                    for (int i = 0; i < arr.length / 2; i++)
                    {
                        int temp = arr[i];
                        arr[i] = arr[arr.length - i - 1];
                        arr[arr.length - i - 1] = temp;
                    }
                }
        );
        System.out.println("Отсортированный массив по убиванию: " + Arrays.toString(masiv));
    }
}
